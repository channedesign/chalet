<%= form_for(@appartment) do |f| %>
  <% if @appartment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@appartment.errors.count, "error") %> prohibited this appartment from being saved:</h2>

      <ul>
      <% @appartment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'form-control', placeholder: 'e.g This is the first floor... or ground level... or full house...' %>
  </div>
  <% unless @appartment.new_record? %>
    <div class="form-group">
      <%= f.label :visible %><br>
      <%= f.label :visible, "Yes", value: "true" %>
      <%= f.radio_button :visible, true %>
      <%= f.label :visible, "No", value: "false" %>
      <%= f.radio_button :visible, false %>
      <span>(If you select YES, it will be visible for the world to see)</span>
    </div>
  <% end %>
  <div class="field hidden">
    <%= f.label :house_id %><br>
    <%= f.text_field :house_id %>
  </div>
  <div class="form-group">
    <%= f.submit @appartment.new_record? ? 'Create Appartment' : 'Update Appartment', class: 'btn btn-default' %>
  </div>
<% end %>
